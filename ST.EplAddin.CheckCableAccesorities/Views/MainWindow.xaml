<Window x:Class="ST.EplAddin.CheckCableAccesorities.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ST.EplAddin.CheckCableAccesorities"
             xmlns:vm="clr-namespace:ST.EplAddin.CheckCableAccesorities.ViewModels"
            xmlns:cnvr="clr-namespace:ST.EplAddin.CheckCableAccesorities.Help"
            xmlns:m="clr-namespace:ST.EplAddin.CheckCableAccesorities.Models"
             mc:Ignorable="d" Height="500" Width="700"
             Title="Cable check"
             ResizeMode="NoResize">

    <Window.Resources>
        <cnvr:EnumDescriptionConverter x:Key="EnumDescriptionConverter"></cnvr:EnumDescriptionConverter>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowVM></vm:MainWindowVM>
    </Window.DataContext>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Список предупреждений" Margin="5">
            <DockPanel>
                <RichTextBox DockPanel.Dock="Top" Height="400" >
                    <FlowDocument>
                        <Paragraph >
                            1.Hello world!
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
                <StackPanel VerticalAlignment="Bottom">

                    <Separator  VerticalAlignment="Top"
                                Width="Auto"
                                Background="Black"/>
                    <Button VerticalAlignment="Top"
                             x:Name="Check_Button"
                             Width="80"
                             Height="25"
                             Content="Проверить"
                             HorizontalAlignment="Left"
                             Margin="5"
                             Command="{Binding CheckCable}">
                    </Button>
                </StackPanel>
                


               
            </DockPanel>
        </GroupBox>

        <GroupBox  Grid.Row="1" Grid.Column="2" Header="Список изделий" Margin="5">
            <DockPanel LastChildFill="True">
                <StackPanel  DockPanel.Dock="Top">
                    <ListBox   
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding PartsData}" 
                              BorderBrush="Black"
                              x:Name="PartsListBox"
                              MaxHeight="360"
                        
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              SelectedItem="{Binding SelectedPart,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Height="358">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding Number, StringFormat={}изделие {0}}" Margin="5"/>
                                    <ComboBox Width="100" ItemsSource="{Binding Source={StaticResource EnumDescriptionConverter }, Path=Strings, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                               SelectedItem="{Binding Type, Converter={StaticResource EnumDescriptionConverter}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom"
                            Height="40" 
                            VerticalAlignment="Bottom">

                    <Separator  VerticalAlignment="Top"
                            Width="Auto"
                            Background="Black"/>
                    <Button
                     VerticalAlignment="Top"
                     x:Name="Save_Button"
                     Width="80"
                     Height="25"
                     Content="Сохранить"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Command="{Binding SaveSetings}">
                    </Button>
                </StackPanel>
                <WrapPanel DockPanel.Dock="Bottom" Height="Auto" VerticalAlignment="Bottom">
                    
                    <StackPanel x:Name="PartsManageButtons" 
                            Orientation="Horizontal"
                               Margin="5,5,5,5"> 
                           
                        <Button 
                            Content="Добавить" 
                            Width="80"
                            Height="25"
                            Margin="0,0,10,0"
                            Command="{Binding AddNewPart}">
                        </Button>
                        <Button 
                             Width="80"
                             Height="25"
                            Content="Удалить" 
                            Command="{Binding RemoveSelectedPart}"
                            CommandParameter="{Binding ElementName=PartsListBox, Path=SelectedItem}">
                        </Button>
                    </StackPanel>
                </WrapPanel>
                  
            </DockPanel>
        </GroupBox>

        <GridSplitter 
                Grid.Column="1"
                Width="2" 
                HorizontalAlignment="Center" 
                ShowsPreview="False">
        </GridSplitter>
    </Grid>
</Window>
