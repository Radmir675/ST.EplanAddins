<Window x:Class="ST.EplAddin.FootNote.Views.FullPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:ST.EplAddin.FootNote.ViewModels"
        xmlns:cvrt="clr-namespace:ST.EplAddin.FootNote.Converters"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        d:DataContext="{d:DesignInstance vm:FullPropertiesWindowVM, IsDesignTimeCreatable=True }"
        Width="1450"
        Height="900"
        Background="WhiteSmoke"
        ResizeMode="CanResizeWithGrip"
        Title="Выбор свойств">


    <Window.Resources>
        <cvrt:EnumToDisplayConverter x:Key="EnumDescriptionConverter" />

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MinWidth="200"
                              MaxWidth="900" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*"
                              MinWidth="300" />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Объект источника"
                  Padding="5,12,5,12"
                  Grid.Column="0"
                  Margin="0,18,0,0">
            <ListBox SelectionMode="Single"
                     Padding="10"
                     SelectedItem="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                     ItemsSource="{Binding States}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </GroupBox>

        <GridSplitter Grid.Column="1"
                      ShowsPreview="False"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />
        <Grid  Grid.Column="2"
               Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TabControl Margin="0,5,0,0"
                        Background="WhiteSmoke"
                        BorderThickness="2">
                <TabItem  Header="Функция">
                    <Border Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <TextBlock Text="Фильтр" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox VerticalContentAlignment="Center" Name="SearchTextBox" />
                                    <Button Width="25"
                                            Height="25"
                                            HorizontalAlignment="Right"
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Foreground="Red"
                                            VerticalContentAlignment="Top"
                                            Click="Cleare_OnClick">
                                        <TextBlock Text="🗙"
                                                   Margin="0,1,0,0" />
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <ListView Grid.Row="1"
                                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                      ItemsSource="{Binding AllProperties}"
                                      SelectedItem="{Binding CurrentSelectedProperty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      Margin="0,15,0,15"
                                      MouseDoubleClick="Control_OnMouseDoubleClick">
                                <ListView.View>

                                    <GridView>
                                        <GridViewColumn
                                                        Header="Имя свойства"
                                                        Width="400"  >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding PropertyName}"/>
                                                        <TextBlock Text="{Binding IndexedNumber, StringFormat=[{0}], TargetNullValue={x:Static system:String.Empty }, FallbackValue={x:Static system:String.Empty}  }" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=PropertyIndex}"
                                                        Width="auto"
                                                        Header="Индекс"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Path=Value}"
                                                        Width="400"
                                                        Header="Значение"/>
                                    </GridView>

                                </ListView.View>
                            </ListView>
                            <TextBox Grid.Row="2"
                                     Height="100"
                                     TextWrapping="Wrap"
                                     Text="{Binding CurrentSelectedProperty.Description,UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="3"
                                     FontSize="14"
                                     IsReadOnly="True"
                                     Background="WhiteSmoke" />
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
            <UniformGrid Rows="1"
                         Grid.Row="1"
                         Height="25"
                         VerticalAlignment="Bottom"
                         Columns="2"
                         Margin="15"
                         Width="280"
                         HorizontalAlignment="Right">

                <Button Width="120"
                        Content="ОК"
                        Click="ButtonBase_OnClick"
                        IsDefault="True"
                        KeyUp="ButtonBase_OnClick"/>
                <Button Width="120"
                        Content="Отменить"
                        IsCancel="True"
                        Margin="5,0,0,0" />

            </UniformGrid>
        </Grid>
    </Grid>
</Window>
